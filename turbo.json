{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        "tsconfig.json"
    ],
    "pipeline": {
        "prisma:format": {
            "outputMode": "new-only",
            "dependsOn": [
                "^prisma:format"
            ],
            "outputs": [],
            "inputs": [
                "prisma/schema.prisma"
            ]
        },
        "prisma:generate": {
            "outputMode": "new-only",
            "dependsOn": [
                "prisma:format",
                "^prisma:generate"
            ],
            "outputs": [],
            "inputs": [
                "prisma/schema.prisma"
            ]
        },
        "lint": {
            "outputMode": "new-only",
            "dependsOn": [
                "^depcheck"
            ],
            "outputs": [],
            "inputs": [
                "src"
            ]
        },
        "build": {
            "outputMode": "new-only",
            "dependsOn": [
                "^prisma:generate",
                "^lint",
                "^build"
            ],
            "outputs": [
                "lib/**"
            ],
            "inputs": [
                "prisma/schema.prisma",
                "src",
                "package.json",
                "tsconfig.json"
            ],
            "env": [
                "NODE_ENV",
                "NEXT_PUBLIC_CACHE",
                "NEXT_PUBLIC_VERSION",
                "BUILD_ID"
            ]
        },
        "depcheck": {
            "outputMode": "new-only",
            "inputs": [
                ".depcheckrc.json",
                "package.json"
            ],
            "outputs": []
        },
        "cleanup": {
            "cache": false
        }
    }
}
