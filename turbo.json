{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        "tsconfig.json"
    ],
    "pipeline": {
        "prisma:format": {
            "outputMode": "new-only",
            "outputs": [],
            "inputs": [
                "prisma/schema.prisma"
            ]
        },
        "depcheck": {
            "outputMode": "new-only",
            "inputs": [
                ".depcheckrc.json",
                "package.json"
            ],
            "outputs": []
        },
        "lint": {
            "outputMode": "new-only",
            "outputs": [],
            "inputs": [
                "src/**"
            ]
        },
        "generate": {
            "cache": false,
            "outputs": [
                "src/sdk/**"
            ],
            "inputs": [
                "src/leight-sdk.ts"
            ]
        },
        "setup": {
            "cache": false
        },
        "init": {
            "dependsOn": [
                "setup",
                "^init"
            ],
            "outputs": [
                "lib/**"
            ],
            "inputs": [
                "src/**"
            ]
        },
        "build": {
            "outputMode": "new-only",
            "dependsOn": [
                "^build",
                "lint"
            ],
            "outputs": [
                "lib/**",
                ".next/**"
            ],
            "inputs": [
                "prisma/schema.prisma",
                "src/**",
                "next.config.mjs",
                "package.json",
                "tsconfig.json"
            ],
            "env": [
                "NEXT_PUBLIC_BUILD",
                "NEXTAUTH_SECRET",
                "NEXTAUTH_URL",
                "NODE_ENV",
                "NEXT_PUBLIC_CACHE",
                "NEXT_PUBLIC_VERSION",
                "DATABASE_URL",
                "BUILD_ID"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "generate"
            ]
        },
        "cleanup": {
            "cache": false
        }
    }
}
