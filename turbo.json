{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": [
        "tsconfig.json"
    ],
    "pipeline": {
        "depcheck": {
            "outputMode": "new-only",
            "inputs": [
                ".depcheckrc.json",
                "package.json"
            ],
            "outputs": []
        },
        "lint": {
            "outputMode": "new-only",
            "dependsOn": [
                "depcheck"
            ],
            "outputs": [],
            "inputs": [
                "src/**"
            ]
        },
        "build": {
            "outputMode": "new-only",
            "dependsOn": [
                "^build",
                "lint"
            ],
            "outputs": [
                "lib/**"
            ],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json"
            ],
            "env": [
                "NEXT_PUBLIC_BUILD",
                "NODE_ENV",
                "NEXT_PUBLIC_CACHE",
                "NEXT_PUBLIC_VERSION",
                "DATABASE_URL",
                "BUILD_ID"
            ]
        },
        "cleanup": {
            "cache": false
        }
    }
}
