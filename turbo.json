{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "lib/**"
            ]
        },
        "lint": {
            "outputs": []
        },
        "publish": {
            "dependsOn": [
                "build",
                "lint"
            ],
            "outputs": []
        }
    }
}
