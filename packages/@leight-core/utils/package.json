{
	"version": "0.8.1",
	"name": "@leight-core/utils",
	"description": "Just a simple set of some utilities used by both client and server.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/leight-core/utils.git"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"sideEffects": false,
	"type": "module",
	"module": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json --outDir lib",
		"dev:watch": "tsc -w -p tsconfig.json --outDir lib --preserveWatchOutput",
		"depcheck": "npx depcheck",
		"lint": "eslint src",
		"cleanup": "pnpm del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
	},
	"dependencies": {
		"@leight-core/api": "workspace:^0.8.5",
		"@leight/utils": "workspace:^0.5.15",
		"deepmerge": "^4.3.0",
		"fast-clean": "^1.2.1",
		"fast-deep-equal": "^3.1.3",
		"filesize": "^10.0.6",
		"humanize-duration": "^3.28.0",
		"i18next": "^22.4.9",
		"is-callable": "^1.2.7",
		"is-empty": "^1.2.0",
		"is-string": "^1.0.7",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@leight/eslint-config-eslint": "workspace:^0.0.8",
		"@leight/tsconfig": "workspace:^0.5.13",
		"@types/humanize-duration": "^3.27.1",
		"@types/is-callable": "^1.1.0",
		"@types/is-empty": "^1.2.1",
		"@types/is-string": "^1.0.0",
		"@types/node": "^18.13.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.33.0",
		"eslint-plugin-unicorn": "^45.0.2",
		"typescript": "^4.9.5"
	}
}
