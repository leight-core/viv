{
    "version": "0.5.12",
    "name": "@leight/utils-server",
    "description": "Utilities usable only on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json --outDir lib",
        "dev:watch": "tsc -w -p tsconfig.json --outDir lib --preserveWatchOutput",
        "depcheck": "npx depcheck",
        "lint": "eslint src",
        "cleanup": "pnpm del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "workspace:^0.0.8",
        "@leight/tsconfig": "workspace:^0.5.13",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.33.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
