{
    "version": "0.5.29",
    "name": "@leight/next.js-server",
    "description": "Next.js related server-side helper stuff.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "workspace:^0.5.27",
        "@leight/user": "workspace:^0.5.29",
        "@leight/user-server": "workspace:^0.5.28",
        "@leight/utils": "workspace:^0.5.30",
        "@leight/winston": "workspace:^0.5.27",
        "@next-auth/prisma-adapter": "^1.0.5",
        "@prisma/client": "^4.11.0",
        "next": "^13.2.4",
        "next-auth": "^4.20.1",
        "raw-body": "^2.5.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@leight/esbuild": "workspace:^0.5.7",
        "@leight/eslint-config-eslint": "workspace:^0.5.16",
        "@leight/tsconfig": "workspace:^0.5.30",
        "@types/node": "^18.15.0",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
