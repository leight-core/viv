{
    "version": "0.5.27",
    "name": "@leight/container-server",
    "description": "All @leight services exposed on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "workspace:^0.5.27",
        "@leight/file-server": "workspace:^0.5.27",
        "@leight/import-server": "workspace:^0.5.27",
        "@leight/job-server": "workspace:^0.5.28",
        "@leight/user-server": "workspace:^0.5.27",
        "@leight/xlsx-import-server": "workspace:^0.5.27"
    },
    "devDependencies": {
        "@leight/esbuild": "workspace:^0.5.7",
        "@leight/eslint-config-eslint": "workspace:^0.5.16",
        "@leight/tsconfig": "workspace:^0.5.30",
        "@types/node": "^18.15.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
