        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "workspace:^0.0.5",
        "@leight/tsconfig": "*",
        "@leight/xlsx-import": "workspace:^0.5.8",
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
