{
    "version": "0.5.26",
    "name": "@leight/file-server",
    "description": "File stuff on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:tsc": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "workspace:^0.5.26",
        "@leight/file": "workspace:^0.5.26",
        "@leight/next.js-server": "workspace:^0.5.27",
        "@leight/prisma": "workspace:^0.5.30",
        "@leight/source-server": "workspace:^0.5.24",
        "depcheck": "^1.4.3",
        "fs-extra": "^11.1.0",
        "mime-detect": "^1.1.4",
        "reflect-metadata": "^0.1.13",
        "touch": "^3.1.0",
        "tsyringe": "^4.7.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@leight/esbuild": "workspace:^0.5.6",
        "@leight/eslint-config-eslint": "workspace:^0.5.16",
        "@leight/tsconfig": "workspace:^0.5.29",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/node": "^18.15.0",
        "@types/touch": "^3.1.2",
        "@types/uuid": "^9.0.1",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.36.0",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
