{
    "version": "0.5.51",
    "name": "@leight/file-server",
    "description": "File stuff on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "dev": "turbowatch",
        "generate": "concurrently npm:generate:*",
        "generate:sdk": "tsx src/leight-sdk.ts",
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "^0.5.48",
        "@leight/file": "^0.5.50",
        "@leight/next.js": "^0.5.13",
        "@leight/next.js-server": "^0.5.53",
        "@leight/prisma": "^0.5.59",
        "@leight/query": "^0.5.47",
        "@leight/source": "^0.5.47",
        "@leight/source-server": "^0.5.47",
        "@leight/trpc-source-server": "^0.5.1",
        "depcheck": "^1.4.3",
        "fs-extra": "^11.1.0",
        "mime-detect": "^1.1.4",
        "touch": "^3.1.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.26",
        "@leight/eslint-config-eslint": "^0.5.35",
        "@leight/sdk": "^0.5.4",
        "@leight/tsconfig": "^0.5.49",
        "@leight/turbowatch": "^0.5.14",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.15.0",
        "@types/touch": "^3.1.2",
        "@types/uuid": "^9.0.1",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.36.0",
        "tsx": "^3.12.6",
        "turbowatch": "^2.3.2",
        "typescript": "^5.0.2"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
