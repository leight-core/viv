{
    "version": "0.5.32",
    "name": "@leight/file-server",
    "description": "File stuff on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "main": "lib/index.js",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "^0.5.32",
        "@leight/file": "^0.5.32",
        "@leight/next.js-server": "^0.5.37",
        "@leight/prisma": "^0.5.41",
        "@leight/source-server": "^0.5.30",
        "depcheck": "^1.4.3",
        "fs-extra": "^11.1.0",
        "mime-detect": "^1.1.4",
        "touch": "^3.1.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.11",
        "@leight/eslint-config-eslint": "^0.5.20",
        "@leight/tsconfig": "^0.5.34",
        "@types/fs-extra": "^11.0.1",
        "@types/node": "^18.15.0",
        "@types/touch": "^3.1.2",
        "@types/uuid": "^9.0.1",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "eslint": "^8.36.0",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
