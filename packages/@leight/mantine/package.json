{
    "version": "0.5.15",
    "name": "@leight/mantine",
    "description": "Tools and some wrappers for Mantine UI library.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json --outDir lib",
        "dev:watch": "tsc -w -p tsconfig.json --outDir lib --preserveWatchOutput",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@babel/core": "^7.20.12",
        "@emotion/react": "^11.10.5",
        "@leight/file": "workspace:^0.5.14",
        "@leight/file-client": "workspace:^0.5.16",
        "@leight/i18n": "workspace:^0.5.14",
        "@leight/i18n-client": "workspace:^0.5.16",
        "@leight/utils": "workspace:^0.5.17",
        "@leight/utils-client": "workspace:^0.5.16",
        "@mantine/core": "^5.10.3",
        "@mantine/dropzone": "^5.10.3",
        "@mantine/hooks": "^5.10.3",
        "@mantine/nprogress": "^5.10.3",
        "@tabler/icons-react": "^2.2.0",
        "next": "^13.1.6",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "*",
        "@leight/tsconfig": "workspace:^0.5.15",
        "@types/node": "^18.13.0",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.33.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
