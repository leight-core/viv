{
    "version": "0.5.27",
    "name": "@leight/mantine",
    "description": "Tools and some wrappers for Mantine UI library.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@babel/core": "^7.21.0",
        "@emotion/react": "^11.10.6",
        "@leight/file": "workspace:^0.5.25",
        "@leight/file-client": "workspace:^0.5.27",
        "@leight/i18n": "workspace:^0.5.26",
        "@leight/i18n-client": "workspace:^0.5.27",
        "@leight/utils": "workspace:^0.5.28",
        "@leight/utils-client": "workspace:^0.5.29",
        "@mantine/core": "^6.0.0",
        "@mantine/dropzone": "^6.0.0",
        "@mantine/hooks": "^6.0.0",
        "@mantine/nprogress": "^6.0.0",
        "@tabler/icons-react": "^2.7.0",
        "next": "^13.2.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@leight/esbuild": "workspace:^0.5.4",
        "@leight/eslint-config-eslint": "workspace:^0.5.15",
        "@leight/tsconfig": "workspace:^0.5.28",
        "@types/node": "^18.14.6",
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.35.0",
        "eslint-plugin-unicorn": "^46.0.0",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
