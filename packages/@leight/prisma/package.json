{
    "version": "0.5.16",
    "name": "@leight/prisma",
    "description": "Some prisma related helpers. This package also contains all @leight exported Prisma models.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json --outDir lib",
        "depcheck": "depcheck",
        "prisma:format": "prisma format",
        "prisma:generate": "prisma generate",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/source": "workspace:^0.5.11",
        "@leight/source-server": "workspace:^0.5.13",
        "@prisma/client": "^4.10.1",
        "reflect-metadata": "^0.1.13",
        "zod": "^3.20.6"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "^0.5.4",
        "@leight/tsconfig": "workspace:^0.5.16",
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.34.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "prisma": "^4.10.1",
        "typescript": "^4.9.5",
        "zod-prisma-types": "^2.0.15"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
