{
    "version": "0.5.29",
    "name": "@leight/prisma",
    "description": "Some prisma related helpers. This package also contains all @leight exported Prisma models.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "src/index.ts",
    "types": "src/index.ts",
    "publishConfig": {
        "module": "lib/index.js",
        "types": "lib/index.d.ts"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "prisma:format": "prisma format",
        "prisma:generate": "prisma generate",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/source": "workspace:^0.5.21",
        "@leight/source-server": "workspace:^0.5.23",
        "@prisma/client": "^4.11.0",
        "reflect-metadata": "^0.1.13",
        "zod": "3.21.1"
    },
    "devDependencies": {
        "@leight/esbuild": "workspace:^0.5.4",
        "@leight/eslint-config-eslint": "workspace:^0.5.15",
        "@leight/tsconfig": "workspace:^0.5.28",
        "@types/node": "^18.15.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "prisma": "^4.11.0",
        "typescript": "^4.9.5",
        "zod-prisma-types": "^2.4.1"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
