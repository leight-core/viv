        "@leight/react-query": "^0.5.11",
        "@leight/sort": "^0.5.45",
        "@leight/source": "^0.5.48",
        "@leight/winston": "^0.5.47",
        "zod": "3.21.1"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.27",
        "@leight/eslint-config-eslint": "^0.5.36",
        "@leight/sdk": "^0.5.5",
        "@leight/tsconfig": "^0.5.50",
        "@leight/turbowatch": "^0.5.15",
        "@types/node": "^18.15.0",
        "concurrently": "^7.6.0",
