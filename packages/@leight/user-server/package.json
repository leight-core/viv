{
    "version": "0.5.9",
    "name": "@leight/user-server",
    "description": "User stuff used server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json --outDir lib",
        "dev:watch": "tsc -w -p tsconfig.json --outDir lib --preserveWatchOutput",
        "depcheck": "npx depcheck",
        "lint": "eslint src",
        "cleanup": "pnpm del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "workspace:^0.5.9",
        "@leight/prisma": "workspace:^0.5.10",
        "@leight/user": "workspace:^0.5.10",
        "@leight/utils": "workspace:^0.5.12",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.7.0"
    },
    "devDependencies": {
        "@leight/eslint-config-eslint": "workspace:^0.0.6",
        "@leight/tsconfig": "workspace:^0.5.11",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "dotenv-cli": "^7.0.0",
        "eslint": "^8.33.0",
        "eslint-plugin-unicorn": "^45.0.2",
        "typescript": "^4.9.5"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme",
    "directories": {
        "lib": "lib"
    }
}
