{
    "name": "@leight-core/viv",
    "private": true,
    "description": "All-in-one solution for fullstack Next.js development with Zustand, Mantine, tRPC and Prisma.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "scripts": {
        "build": "turbo run build --no-daemon --no-cache --force",
        "prisma:generate": "turbo run prisma:generate --no-daemon --no-cache --force",
        "lint": "turbo run lint --no-daemon",
        "depcheck": "turbo run depcheck --no-daemon --parallel",
        "cleanup": "turbo run cleanup --no-daemon --parallel",
        "changeset": "changeset",
        "changeset:version": "changeset version",
        "changeset:publish": "changeset publish",
        "npkill": "npx npkill"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "prettier": "^2.8.4",
        "prettier-plugin-tailwindcss": "^0.2.4",
        "turbo": "^1.8.3",
        "typescript": "^4.9.5"
    }
}
