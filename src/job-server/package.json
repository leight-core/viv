{
    "version": "0.5.71",
    "name": "@leight/job-server",
    "description": "Job (async execution) stuff on server-side.",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git://github.com/leight-core/viv.git"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "sideEffects": false,
    "type": "module",
    "module": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "dev": "turbowatch",
        "generate": "concurrently npm:generate:*",
        "generate:sdk": "tsx src/leight-sdk.ts",
        "build": "concurrently npm:build:*",
        "build:esbuild": "node esbuild.mjs",
        "build:types": "tsc --outDir lib",
        "depcheck": "depcheck",
        "lint": "eslint src",
        "cleanup": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
    },
    "dependencies": {
        "@leight/container": "^0.5.62",
        "@leight/job": "^0.5.72",
        "@leight/prisma": "^0.5.78",
        "@leight/query": "^0.5.61",
        "@leight/source": "^0.5.61",
        "@leight/source-server": "^0.5.61",
        "@leight/trpc-source-server": "^0.5.15",
        "@leight/user": "^0.5.72",
        "@leight/utils": "^0.5.64",
        "@leight/winston": "^0.5.60",
        "delay": "^5.0.0"
    },
    "devDependencies": {
        "@leight/esbuild": "^0.5.40",
        "@leight/eslint-config-eslint": "^0.5.49",
        "@leight/sdk": "^0.5.19",
        "@leight/tsconfig": "^0.5.63",
        "@leight/turbowatch": "^0.5.28",
        "@types/node": "^18.15.0",
        "concurrently": "^7.6.0",
        "del-cli": "^5.0.0",
        "depcheck": "^1.4.3",
        "eslint": "^8.36.0",
        "turbowatch": "^2.3.2",
        "typescript": "^5.0.2"
    },
    "bugs": {
        "url": "https://github.com/leight-core/viv/issues"
    },
    "homepage": "https://github.com/leight-core/viv#readme"
}
