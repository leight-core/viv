{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strictPropertyInitialization": true,
		"strict": true,
		"allowJs": true,
		"noImplicitAny": true,
		"target": "ES2021",
		"module": "CommonJS",
		"declaration": true,
		"sourceMap": true,
		"composite": true,
		"removeComments": false,
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"rootDir": "src",
		"outDir": "lib/cjs",
		"lib": [
			"DOM",
			"ESNext"
		],
		"skipLibCheck": true,
		"types": [
			"node"
		],
		"baseUrl": "src",
		"paths": {
			"@leight-core/api": [
				"."
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
